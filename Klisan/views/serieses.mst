<!DOCTYPE HTML>
<html lang="en">

<head>    
    {{> head }}
</head>

<body onload="serial()" class="background"> 
{{> header }}
{{#userRights}}
<div class="container-fluid">
	<br>
	<h1 class= "text-center pageName">New serieses</h1>
	<div class="row text-center" id="serieses">
	
    Loading...

	</div>

    <div class="fixed-bottom" id="bottom">    
    <div class="text-center">
    <form>
        <input type="hidden" value="{{sId}}" id="serial">
        {{#watch}}
        <a href="/addToWL?sId={{sId}}" class="btn btn-outline-primary btn-lg mr-5 active" role="button" aria-pressed="true">Add to watchlist </a> 
        {{/watch}}
        {{#adminRights}}        
        <a href="/addSeries?sId={{sId}}" class="btn btn-outline-success btn-lg mr-5 active" role="button" aria-pressed="true">Add episod</a>
        <a href="/updateSerial?sId={{sId}}" class="btn btn-outline-info btn-lg mr-5 active" role="button" aria-pressed="true">Update serial</a>
        <a href="#myModal2" onclick="confirm()" id="delSer" class="btn btn-outline-danger btn-lg mr-5 active" 
            role="button" aria-pressed="true">Remove serial</a>                             
        {{/adminRights}}
    </form>
    </div>
    {{> pagination }}
    </div>
</div>
{{/userRights}}
{{> auth }}

<script src="https://cdnjs.cloudflare.com/ajax/libs/mustache.js/3.0.1/mustache.min.js"></script>   

<script src="../javascripts/pagination.js"></script>

