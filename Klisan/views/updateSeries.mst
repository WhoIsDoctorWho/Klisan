<!DOCTYPE HTML>
<html lang="en">

<head>    
    {{> head }}    
</head>

<body class="background"> 
    {{> header }}
    {{#adminRights}}    
    {{#series}}    
    <div class="container center-block creating ">  
    <form action="/updateSeries" method="POST" enctype="multipart/form-data" role="form">
        <div class="form-group">
            <label for="title">Title:</label>
            <input name="title" type="text" class="form-control" id="title" value="{{title}}" required>            
        </div>
        <div class="form-group">
            <label for="nseason">Number of season:</label>
            <input name="seasonNumber" type="number" class="form-control" id="nseason" value="{{seasonNumber}}" required>            
        </div>
        <div class="form-group">
            <label for="nseries">Number of series:</label>
            <input name="seriesNumber" type="number" class="form-control" id="nseries" value="{{seriesNumber}}" required>            
        </div>
        <div class="form-group">
            <label for="mark">Mark:</label>
            <input name="mark" type="number" class="form-control" id="mark" value="{{mark}}" required>            
        </div>
        <div class="form-group">
            <label for="description">Description:</label>
            <textarea rows="10" cols = "30" name="description" required>{{description}}</textarea>
        </div>
        <div class="form-group">
            <label for="video">Link to the video:</label>
            <input name="videoLink" type="text" class="form-control" id="video" value="{{videoLink}}" required>            
        </div>
        <input type="hidden" name="sId" value="{{_id}}">
        <button type="submit" class="btn btn-info btn-lg btn-block">Update</button>
    </form>
    </div>  
    {{/series}}    
    {{/adminRights}}
    {{> authAdm }}   

    {{> footer }}
</body>
</html>

