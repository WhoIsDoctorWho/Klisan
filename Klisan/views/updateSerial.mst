<!DOCTYPE HTML>
<html lang="en">

<head>    
    {{> head }}    
</head>

<body class="background"> 
    {{> header }}
    {{#adminRights}}    
    {{#serial}}    
        <div class="container center-block creating ">  
        <form action="/updateSerial" method="POST" enctype="multipart/form-data" role="form">
            <div class="form-group">
                <label for="title">Title:</label>
                <input name="title" type="text" class="form-control" id="title" value="{{title}}" required>            
            </div>
            <div class="form-group">
                <label for="nseason">Number of seasons:</label>
                <input name="seasonsNum" type="number" class="form-control" id="nseason" value="{{seasonsNum}}" required>            
            </div>
            <div class="form-group">
                <label for="mark">Mark:</label>
                <input name="mark" type="number" class="form-control" id="mark" value="{{mark}}" required>            
            </div>
            <div class="form-group">
                <label for="description">Description:</label>
                <textarea rows="10" cols = "30" name="description" required>{{description}}</textarea>
            </div>
            <input type="hidden" name="sId" value="{{_id}}">
            <button type="submit" class="btn btn-info btn-lg btn-block">Update</button>
        </form>
        </div>  
    {{/serial}}    
    {{/adminRights}}
    {{> authAdm }}   

    {{> footer }}
</body>
</html>

